---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Theme</title>

		<script>
			(() => {
				const theme = localStorage.getItem("theme");
				if (theme === "dark") {
					document.documentElement.classList.add("dark");
				} else {
					document.documentElement.classList.remove("dark");
				}
			})();
		</script>
	</head>
	<body class="bg-white dark:bg-gray-900 flex justify-center min-h-screen">
		<div class="relative w-screen h-screen overflow-hidden z-0">
			<img
				id="day-img"
				src="/day.jpg"
				alt="Day"
				class="absolute inset-0 w-full h-full object-cover transition-opacity opacity-0 invisible duration-[1.5s] ease-in-out"
			/>
			<img
				id="night-img"
				src="/night.jpg"
				alt="Night"
				class="absolute inset-0 w-full h-full object-cover transition-opacity opacity-0 invisible duration-[1.5s] ease-in-out"
			/>
		</div>

		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
